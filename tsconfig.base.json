{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2017", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@alchemisten/logging": ["libs/logging/src/index.ts"],
			"@alchemisten/logging-transport-sentry-browser": [
				"libs/logging-transport-sentry-browser/src/index.ts"
			]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
